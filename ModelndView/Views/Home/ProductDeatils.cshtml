@model ModelndView.Model.Product

<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<h1 class="text-info">Product Details</h1>

<div class="card" style="width: 18rem;">
    <img src="~/Images/img21.jpg" class="card-img-top" alt="@Model.Name" style="width: 150px; height: 150px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Price: @Model.Price</p>
        <p class="card-text">Details of Product - @Model.Name</p>
        <form method="post" action="/Home/AddToCart">
            <input type="hidden" name="productId" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>
    </div>
</div>

<script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
