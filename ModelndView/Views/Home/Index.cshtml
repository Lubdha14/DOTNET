@model List<ModelndView.Model.ProductViewModel>

<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<p class="text-bg-info">Index</p>

@foreach (var productViewModel in Model)
{
    <div class="card" style="width: 5rem;">
        <img src="~/Images/img21.jpg" class="card-img-top" alt="@productViewModel.Product.Name" style="width: 150px; height: 150px;">
        <div class="card-body">
            <h5 class="card-title">@productViewModel.Product.Name</h5>
            <p class="card-text">@productViewModel.Message</p>
            <p class="card-text">Price: @productViewModel.Product.Price.ToString("C")</p>

            @if (productViewModel.isInStock)
            {
                <p class="card-text">In Stock</p>
            }
            else
            {
                <p class="card-text">Out of Stock</p>
            }

            <a href="/Home/ProductDeatils/@productViewModel.Product.Id" class="btn btn-primary">Product Details</a><br /><br /><br /><br />
        </div>
    </div>
}

<script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
